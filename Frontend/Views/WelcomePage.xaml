<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Views.WelcomePage"
             BackgroundColor="#512BD4">
	<!-- Purple background -->

	<Grid VerticalOptions="Center">
		<VerticalStackLayout Spacing="40" Padding="40" VerticalOptions="Center">
			<!-- App Title and Welcome Message -->
			<VerticalStackLayout Spacing="10">
				<Label Text="Welcome to"
                       FontSize="24"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Opacity="0.8"/>

				<Label Text="AIssueReporter"
                       FontSize="42"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
			</VerticalStackLayout>

			<!-- Action Buttons -->
			<VerticalStackLayout Spacing="20">
				<Button Text="Login"
                        BackgroundColor="White"
                        TextColor="#512BD4"
				FontSize="18"
				FontAttributes="Bold"
				CornerRadius="10"
				HeightRequest="50"
				Clicked="OnLoginClicked"/>

				<Button Text="Sign Up"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        BorderColor="White"
                        BorderWidth="2"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnSignUpClicked"/>
			</VerticalStackLayout>
		</VerticalStackLayout>
	</Grid>
</ContentPage>