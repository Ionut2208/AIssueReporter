<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Views.SignUpPage"
             Title="Sign Up">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Sign Up" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name ="FirstName" Placeholder="First name" />
		<Entry x:Name ="LastName" Placeholder="Last name" />
        <Entry x:Name ="Email" Placeholder="Email" />
		<Entry x:Name="PhoneNumber" Placeholder="Phone number" />
        <Entry x:Name="Password" Placeholder="Password" IsPassword="True" />

		<Button Text="Sign up"
                FontSize="20"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnSignUpClicked"/>
    </VerticalStackLayout>
</ContentPage>